<!DOCTYPE html>
<html>
  <head>
    <title>BlogBackendPortion</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <% if user_signed_in? %>
        <%= render partial: "layouts/logged_in_sidebar" %>
      <% else %>
        <%= render partial: "layouts/logged_out_sidebar"%>
      <% end %>

      <div class="col-sm-8">
        <div class="container">
          <%= yield %>
        </div>
      </div>

    </div>
  </body>
</html>
