<h1><%= @post.title %></h1>
<p>
  <%= @post.content %>
</p>
<div class="author">By, <%= @post.user.name %></div>

<% if current_user == @post.user  %>
<!-- || current_user.admin? -->
  <%= button_to "Delete post", user_post_path(current_user), method: "delete", data: {confirm: "Are you sure?"} %>
<% end %>

<div class="comments">
  <h3>Comments</h3>
  <% @post.comments.each do |comment| %>
    <p><%= comment.body %> </p>
    <p>by, <%= comment.user.name %></p>
  <% end %>
</div>

<%= form_for @comment, remote: true, id: "new_comment" do |f| %>
  <input type="hidden" name="comment[post_id]" value=<%=@post.id%> >
  <%= f.text_area :body %></br>
  <%= f.submit %>
<% end %>
